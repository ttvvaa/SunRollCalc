@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Калькулятор</title>

	<style>
		input[type="radio"]:checked + label {
			font-weight: bold;
		}
		.rborder {
			border-radius: 5px;
			-moz-border-radius: 5px;
			-webkit-border-radius: 5px;
			border: 1px solid #058001;
			text-align: right;
		}
	</style>
</head>
<body>
	<h2>
		Калькулятор
	</h2>

	<form method="post" action="~/Calc/Calc">
		<table>
			<caption><strong>Расчет стоимости рольставни из поликарбоната</strong></caption>
			<tbody>
				<tr>
					<td>Ширина проема (мм)</td>
					<td><input name="width" value="1500" class="rborder" /></td>
				</tr>
				<tr>
					<td>Высота проема (мм)</td>
					<td><input name="height" value="2000" class="rborder" /></td>
				</tr>
				<tr>
					<td>Тип монтажа</td>
					<td>
						@*<select name="mounting">
								<option value="ext">Накладной</option>
								<option value="int">Встроенный</option>
							</select>*@
						<input id="ext" type="radio" name="mounting" value="ext"><label for="ext">Накладной</label>
						<input id="int" type="radio" name="mounting" value="int"><label for="int">Встроенный</label>
					</td>
				</tr>
				<tr>
					<td>Тип управления</td>
					<td>
						@*<select name="control">
							<option value="manual">Ручной</option>
							<option value="auto">Автоматический</option>
						</select>*@
						<input id="manual" type="radio" name="control" value="manual"><label for="manual">Ручной</label>
						<input id="auto" type="radio" name="control" value="auto"><label for="auto">Автоматический</label>
					</td>
				</tr>
				<tr>
					<td>Замок с ключом</td>
					<td><input name="bLock" type="checkbox" /></td>
				</tr>
				<tr>
					<td>Аварийное открытие</td>
					<td><input name="bEmegency" type="checkbox" /></td>
				</tr>
				<tr>
					<td>Дистанционное управление</td>
					<td><input name="bRemote" type="checkbox" /></td>
				</tr>
				<tr>
					<td>Монтаж</td>
					<td><input name="bMount" type="checkbox" /></td>
				</tr>
				<tr>
					<td>Доставка</td>
					<td><input name="bDelivery" type="checkbox" /><input name="kmDelivery" value="0" /></td>
				</tr>
			</tbody>
		</table>
		<button type="submit" value="Submit">Рассчитать стоимость</button>
	</form>
</body>
</html>
